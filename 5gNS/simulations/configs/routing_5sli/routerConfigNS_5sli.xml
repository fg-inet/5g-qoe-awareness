<config>
	<!--Hosts address configurations-->
	<interface hosts="hostVID[*]" address="10.0.x.x"/>
	<interface hosts="hostLVD[*]" address="10.1.x.x"/>
	<interface hosts="hostFDO[*]" address="10.2.x.x"/>
	<interface hosts="hostSSH[*]" address="10.3.x.x"/>
	<interface hosts="hostVIP[*]" address="10.4.x.x"/>
	
	
	<!--Server address configurations-->
	<interface hosts="serverVID" address="10.5.10.x"/>
	<interface hosts="serverLVD" address="10.5.11.x"/>
	<interface hosts="serverFDO" address="10.5.12.x"/>
	<interface hosts="serverSSH" address="10.5.13.x"/>
	<interface hosts="serverVIP" address="10.5.14.x"/>
	
	
	<!--Router 0 address configurations-->
	<interface hosts="router0" towards="hostVID[*]" address="10.0.x.x"/>
	<interface hosts="router0" towards="hostLVD[*]" address="10.1.x.x"/>
	<interface hosts="router0" towards="hostFDO[*]" address="10.2.x.x"/>
	<interface hosts="router0" towards="hostSSH[*]" address="10.3.x.x"/>
	<interface hosts="router0" towards="hostVIP[*]" address="10.4.x.x"/>
	
	<interface hosts="router0" names="ppp0" address="10.5.20.x"/> <!--Video slice-->
	<interface hosts="router0" names="ppp1" address="10.5.21.x"/> <!--Live video slice-->
	<interface hosts="router0" names="ppp2" address="10.5.22.x"/> <!--File download slice-->
	<interface hosts="router0" names="ppp3" address="10.5.23.x"/> <!--SSH slice-->
	<interface hosts="router0" names="ppp4" address="10.5.24.x"/> <!--VoIP slice-->
	
	
	
	<!--Router 1 address configurations-->
	<interface hosts="router1" towards="serverVID" address="10.5.10.x"/>
	<interface hosts="router1" towards="serverLVD" address="10.5.11.x"/>
	<interface hosts="router1" towards="serverFDO" address="10.5.12.x"/>
	<interface hosts="router1" towards="serverSSH" address="10.5.13.x"/>
	<interface hosts="router1" towards="serverVIP" address="10.5.14.x"/>
	
	<interface hosts="router1" names="ppp0" address="10.5.20.x"/> <!--Video slice-->
	<interface hosts="router1" names="ppp1" address="10.5.21.x"/> <!--Live video slice-->
	<interface hosts="router1" names="ppp2" address="10.5.22.x"/> <!--File download slice-->
	<interface hosts="router1" names="ppp3" address="10.5.23.x"/> <!--SSH slice-->
	<interface hosts="router1" names="ppp4" address="10.5.24.x"/> <!--VoIP slice-->
	
	
	<!--Hosts route configurations-->
	<route hosts="hostVID[*]" destination="10.5.10.0" netmask="255.255.255.0" interface="ppp0" metric="100"/>
	<route hosts="hostLVD[*]" destination="10.5.11.0" netmask="255.255.255.0" interface="ppp0" metric="100"/>
	<route hosts="hostFDO[*]" destination="10.5.12.0" netmask="255.255.255.0" interface="ppp0" metric="100"/>
	<route hosts="hostSSH[*]" destination="10.5.13.0" netmask="255.255.255.0" interface="ppp0" metric="100"/>
	<route hosts="hostVIP[*]" destination="10.5.14.0" netmask="255.255.255.0" interface="ppp0" metric="100"/>
	
	
	<!--Server route configurations-->
	<route hosts="serverVID" destination="10.0.0.0" netmask="255.255.0.0" interface="ppp0" metric="100"/>
	<route hosts="serverLVD" destination="10.1.0.0" netmask="255.255.0.0" interface="ppp0" metric="100"/>
	<route hosts="serverFDO" destination="10.2.0.0" netmask="255.255.0.0" interface="ppp0" metric="100"/>
	<route hosts="serverSSH" destination="10.3.0.0" netmask="255.255.0.0" interface="ppp0" metric="100"/>
	<route hosts="serverVIP" destination="10.4.0.0" netmask="255.255.0.0" interface="ppp0" metric="100"/>
	
	
	<!--Router 0 route configurations-->
	<route hosts="router0" destination="10.5.10.0" netmask="255.255.255.0" interface="ppp0" gateway="10.5.20.2" metric="100"/>
	<route hosts="router0" destination="10.5.11.0" netmask="255.255.255.0" interface="ppp1" gateway="10.5.21.2" metric="100"/>
	<route hosts="router0" destination="10.5.12.0" netmask="255.255.255.0" interface="ppp2" gateway="10.5.22.2" metric="100"/>
	<route hosts="router0" destination="10.5.13.0" netmask="255.255.255.0" interface="ppp3" gateway="10.5.23.2" metric="100"/>
	<route hosts="router0" destination="10.5.14.0" netmask="255.255.255.0" interface="ppp4" gateway="10.5.24.2" metric="100"/>
	
	
	<!--Router 1 route configurations-->
	<route hosts="router1" destination="10.0.0.0" netmask="255.255.0.0" interface="ppp0" gateway="10.5.20.1" metric="100"/>
	<route hosts="router1" destination="10.1.0.0" netmask="255.255.0.0" interface="ppp1" gateway="10.5.21.1" metric="100"/>
	<route hosts="router1" destination="10.2.0.0" netmask="255.255.0.0" interface="ppp2" gateway="10.5.22.1" metric="100"/>
	<route hosts="router1" destination="10.3.0.0" netmask="255.255.0.0" interface="ppp3" gateway="10.5.23.1" metric="100"/>
	<route hosts="router1" destination="10.4.0.0" netmask="255.255.0.0" interface="ppp4" gateway="10.5.24.1" metric="100"/>
</config>

